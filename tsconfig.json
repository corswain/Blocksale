{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "app/*": ["app/*"],
            "core/*": ["app/core/*"],
            "layout/*": ["app/layout/*"],
            "main/*": ["app/main/*"],
            "shared/*": ["app/shared/*"],
            "@fuse": ["@fuse/"],
            "@env/*": ["environments/*"]
        },
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    }
}